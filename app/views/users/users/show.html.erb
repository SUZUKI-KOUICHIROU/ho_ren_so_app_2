<% provide(:title, (@user.name)) %>

<%= content_for :side_menu do %>
  <%= render partial: 'layouts/sidebar' , locals: { user: @user, project: @project } %>
<% end %>
<%# box-project-reportの代わりにm-5を採用してます。 %>
<div class="m-3">
  <%# col-md-6でwidth:50%になります。 %>
  <div class="col-md-6 offset-md-3">
    <h1 class="text-center">ユーザー情報</h1>
    <div class="card">
      <div class="card-header card-header-radius">
        <%= current_user.name %>
      </div>
      <div class="card-body">
        <div>
          <span class="report-item-title font-weight-bold">
            氏名
          </span>
        </div>
        <div class="card-text ml-0">
          <%= @user.name %>
        </div>
        <div>
          <span class="report-item-title font-weight-bold">
            メールアドレス
          </span>
        </div>
        <div class="card-text ml-0">
          <%= @user.email %>
        </div>
        <div class='text-right mr-3 mb-3 mt-4'>
          <%= link_to "ユーザー情報の編集", edit_user_registration_path, class: "btn btn-light btn-outline-orange" %>
        </div> 
      </div>
    </div>
  </div>
</div>

