<% if flash.now[:danger] %>
  $("#flash-messages").html('<div class="alert alert-danger"><%= j flash.now[:danger] %></div>');
  setTimeout(function() {
    $(".alert-danger").hide("fast", function() { // フラッシュメッセージを非表示
      $(this).remove(); // 非表示後に要素をDOMから削除
    });
  }, 5000); // 5000ミリ秒（5秒）後に非表示
<% end %>
$("#you-reports-container").html("<%= escape_javascript(render partial: 'projects/reports/you_reports', locals: { messages: @you_reports }) %>");
$("#reports-container").html("<%= escape_javascript(render partial: 'projects/reports/reports', locals: { messages: @reports }) %>");
$("#all-reports-container").html("<%= escape_javascript(render partial: 'projects/reports/all_reports', locals: { messages: @all_reports }) %>");
